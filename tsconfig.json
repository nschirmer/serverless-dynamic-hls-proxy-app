{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./app",
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
    },
    "include": [
        "src/**/*",
        "src/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}